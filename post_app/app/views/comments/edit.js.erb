var span = $('div#<%= dom_id(@comment) %> span');
var destroy_btn = $('#destroybtn_<%=@comment.id%>');

//var currentComment = span.text();

var edit_btn = $('#editbtn_<%=@comment.id%>');
span.replaceWith('<%=form_for @comment, remote: true do |f| %><%=f.hidden_field :post_id%><%=f.text_field :body%><%=f.submit :style => "display:none" %><%end%>');
edit_btn.css('display','none');
destroy_btn.css('display','none');


$('div#<%=dom_id(@comment)%> #newUpdateBtn').css('display','inline');

$('div#<%=dom_id(@comment)%> #newUpdateBtn').click(function(){
  var update_btn = $('div#<%= dom_id(@comment)%> form input[type="submit"]');
  update_btn.click();
});